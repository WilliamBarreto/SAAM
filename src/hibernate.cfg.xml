<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"> 

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/saam</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">10</property>
		<property name="dialect">br.ucb.saam.util.HibernateMeuMysql5Dialect</property>
		<property name="show_sql">true</property>
		<property name="current_session_context_class">thread</property>
		<property name="hbm2ddl.auto">validate</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		
		<mapping class="br.ucb.saam.beans.AreaBean"/>
		<mapping class="br.ucb.saam.beans.AtendimentoBean"/>
		<mapping class="br.ucb.saam.beans.AvaliacaoBean"/>
		<mapping class="br.ucb.saam.beans.ClassificacaoBean"/>
		<mapping class="br.ucb.saam.beans.EnderecoBean"/>
		<mapping class="br.ucb.saam.beans.FuncionalidadeBean"/>
		<mapping class="br.ucb.saam.beans.LogBean"/>
		<mapping class="br.ucb.saam.beans.MensagemBean"/>
		<mapping class="br.ucb.saam.beans.PerfilBean"/>
		<mapping class="br.ucb.saam.beans.PerguntaFrequenteBean"/>
		<mapping class="br.ucb.saam.beans.PessoaBean"/>
		<mapping class="br.ucb.saam.beans.TipoAtendimentoBean"/>
		<mapping class="br.ucb.saam.beans.TipoLogBean"/>
		<mapping class="br.ucb.saam.beans.UsuarioBean"/>
		<mapping class="br.ucb.saam.beans.VoluntarioBean"/>
		
		
	</session-factory>
</hibernate-configuration>



